<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


        <variable
            name="model"
            type="com.android.ae08bc4bf43145be1c0a32f0872b7f47.model.Station" />
    </data>


    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favIv"
            setIcon="@{model.favorite}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/capacity"
                setCapacity="@{model.capacity}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/stock"
                setStock="@{model.stock}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/need"
                setNeed="@{model.need}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/distance"
                setDirX="@{model.coordinateX}"
                setDirY="@{model.coordinateY}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/planetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@{model.name}"
            android:textColor="@color/white"
            android:textSize="18sp"

            ></TextView>


        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/planetName"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/travelButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/planetName"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@color/button"
            android:gravity="center"
            android:padding="12dp"
            android:text="GÄ°T"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

    </RelativeLayout>
</layout>